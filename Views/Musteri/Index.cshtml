@model List<MVCStok.Models.Entity.Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
    </tr>
    @foreach (var musteri in Model)
    {
        <tr>
            <td>@musteri.MusteriId</td>
            <td>@musteri.Ad</td>
            <td>@musteri.Soyad</td>
        </tr>
    }

</table>
<a href="/Musteri/MusteriEkle/" class="btn btn-primary">Yeni Müşteri Ekle</a>
